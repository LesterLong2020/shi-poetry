{
    "compilerOptions": {
        "outDir": "./dist/",
        "noImplicitAny": true,
        "module": "esnext",
        "target": "es5",
        "jsx": "react",
        "allowJs": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "baseUrl": "./",
        "paths": {
            "src": ["src"],
            "@": ["src"]
        }
    },
    "include": [
        "src",
        "typings"
    ],
    "exclude": [
        "node_modules",
        "config/"
    ]
}
